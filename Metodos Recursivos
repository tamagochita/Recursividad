
/** 
Suma un numero n hasta que n es igual a uno
**\
public int suma(int n) {
        if (n <= 1) {
            return n;
        }
        return n + suma(n - 1);
    }


/**
calcula el factorial de un entero n mayor a 0
**\

    public int factorial(int n) {
        if (n <= 1) {
            return n;
        }
        return n * factorial(n - 1);
    }



/**
Imprime los numeros desde 1 a hasta n
**\
    public void imprimeHasta(int i, int n) {

        if (n>i) return;
        System.out.println(i);
        imprimeHasta(i+1,n);
        
    }
    
   /**
   Calcula la potencia de un entero x a la n
   **\
   
    public int PotenciaDeUnNumero(int base, int expo) {
        if (expo == 0) {
            return 1;
        }

        return base * PotenciaDeUnNumero(base, expo - 1);

    }
    
